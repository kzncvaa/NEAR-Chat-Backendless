<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:text="@string/default_sample_code_title"
            android:id="@+id/sampleCodeTitle"
            android:layout_marginBottom="@dimen/dp4"
            android:gravity="center"
            android:textSize="@dimen/text_large"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/sampleCodeEdit"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4"
            android:layout_weight="1"
            android:gravity="left|top"
            android:textSize="@dimen/text_medium"
            android:editable="false"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp120"
            android:layout_marginTop="@dimen/dp4"
            android:gravity="center">

        <Button
                android:layout_width="@dimen/dp184"
                android:layout_height="wrap_content"
                android:text="@string/run_code_button_text"
                android:id="@+id/runCodeButton"
                android:layout_marginBottom="@dimen/dp4"/>

        <Button
                android:layout_width="@dimen/dp184"
                android:layout_height="wrap_content"
                android:text="@string/send_email_title"
                android:id="@+id/sendCodeButton"
                android:layout_marginTop="@dimen/dp4"/>
    </LinearLayout>
</LinearLayout>