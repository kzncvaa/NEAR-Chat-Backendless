<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinMobile.BasicFindResult">
  <ContentPage.Content>
    <StackLayout x:Name="mainStackLayout" Padding="12,40,12,12">
      <Label Text="Basic Find"
             FontSize="24"
             HorizontalOptions="CenterAndExpand" />
      <Label x:Name="field" FontAttributes="Bold" FontSize="20"/>
      <ScrollView>
        <StackLayout x:Name="codeLog"/>
      </ScrollView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>