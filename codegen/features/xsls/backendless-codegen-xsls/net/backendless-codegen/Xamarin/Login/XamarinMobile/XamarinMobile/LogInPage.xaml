<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginAndRegistration.LogInPage"
             Title="Backendless User Info">
    <ContentPage.Content>
        <StackLayout x:Name="loginLayout" Padding="12,40,12,12" >
            <ScrollView>
                <Label x:Name="userInfo" VerticalOptions="CenterAndExpand"
                       HorizontalOptions="CenterAndExpand" />
            </ScrollView>
            <Button Text="Logout" Clicked="LogoutFromBackendless"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>