<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginAndRegistration.RestorePasswordPage"
             Title="Password Restoration">
    <ContentPage.Content>
        <StackLayout Padding="12,40,12,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Margin="0,15,0,0" Text="Email:" Grid.Column="0"/>
                <Entry x:Name="userEmail" Placeholder="Your email..." FontSize="14" Grid.Column="1"/>
            </Grid>
            <Button Text="Restore password" Clicked="RestoreUserPassword"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>